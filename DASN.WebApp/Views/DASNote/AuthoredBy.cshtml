@model DASN.WebApp.Models.ViewModels.DASNote.ShowDASNoteCollectionViewModel
@{
    ViewBag.Title = Model.CreatedBy + " DASNotes";
}

<h2>@ViewBag.Title.</h2>

<div class="form-horizontal">
    @foreach (var item in Model)
    {
        <div>
            <hr/>
            <small>@item.CreatedAt.ToString("HH:mm:ss dd/MM/yyyy")</small>
            @if (item.Content.Length > 100)
            {
                <p>@item.Content.Substring(0, 97) ...</p>
            }
            else
            {
                <p>@item.Content</p>
            }
            <a href="@Url.Action(controllerName: "DASNote", actionName: "Show", routeValues: new {id = item.DASNoteToken})" class="btn btn-primary btn-xs">Show more...</a>
        </div>        
    }      
</div>